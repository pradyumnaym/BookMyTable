<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bookmytable.CuisineListActivity"
    android:id="@+id/drawer">

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        android:id="@+id/nv"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff160">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:text="Pick Your Choice"
                android:textColor="#ff1500"
                android:textSize="40sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chinese"
                android:textColor="#ff6e60"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/chinese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:onClick="goToRestaurants"
                android:textColor="#ff6e60"
                app:srcCompat="@drawable/chinese" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="North Indian"
                android:textColor="#ff6e60"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/north"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:onClick="goToRestaurants"
                android:textColor="#ff6e60"
                app:srcCompat="@drawable/north" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="south Indian"
                android:textColor="#ff6e60"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/south"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:onClick="goToRestaurants"
                android:textColor="#ff6e60"
                app:srcCompat="@drawable/south" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Italian"
                android:textColor="#ff6e60"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/italian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:onClick="goToRestaurants"
                android:textColor="#ff6e60"
                app:srcCompat="@drawable/italian" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="American"
                android:textColor="#ff6e60"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/mcd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:onClick="goToRestaurants"
                app:srcCompat="@drawable/mcd" />
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.DrawerLayout>